<% if notice.present? %>
  <div class="alert alert-success" role="alert" id="notice">
    <%= notice %>
  </div>
<% end %>

<h1>Books</h1>

<table class="table table-striped">
  <thead>
  <tr>
    <th>title</th>
    <th>stock</th>
    <th>total_stock</th>
    <th>lent_quantity</th>
    <th>fee</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.stock %> </td>
      <td><%= book.total_stock %> </td>
      <td><%= book.total_stock - book.stock %> </td>
      <td><%= book.fee %> </td>
      <td><%= link_to 'Detail', detail_book_path(book) %></td>
      <td><%= link_to 'Edit', edit_book_path(book) %></td>
      <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path, class: 'btn btn-primary' %>
<%= link_to 'users', users_path, class: 'btn btn-secondary'  %>
<%= link_to 'Transactions', transactions_path, class: 'btn btn-secondary'  %>
